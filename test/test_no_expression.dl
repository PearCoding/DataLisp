;; File from TheGreatJourney < http://www.pearcoding.eu/projects/thegreatjourney >
(environment
	;; Development 1 Day == 1min => 0.041666667
	;; Deploy 1 Day == 20min => 0.833333333
	:steps				0.041666667
		
	:hourCycleTime		60;; minutes
	:dayCycleTime		24;; hours
	:monthCycleTime		14;; days
	:yearCycleTime		4;; months
	
	:sunPower			[
		(point
			:time		0
			:value		0
		),
		(point
			:time		0.25;; 6/24
			:value		0.25
		),
		(point
			:time		0.5
			:value		1
		),
		(point
			:time		0.83;; 18/24
			:value		0.25
		),
		(point
			:time		1
			:value		0
		)
	]
	
	:sunColor			[
		(point
			:time		0
			:value		[0.3, 0.3, 1]
		),
		(point
			:time		0.25;; 6/24
			:value		[0.8, 0.2, 0.4]
		),
		(point
			:time		0.5
			:value		[1, 1, 1]
		),
		(point
			:time		0.83;; 18/24
			:value		[1, 1, 1]
		),
		(point
			:time		1
			:value		[0.3, 0.3, 1]
		)
	]
	
	:sunDirection		[
		(point
			:time		0
			:value		[0.5, -0.5]
		),
		(point
			:time		0.25;; 6/24
			:value		[0, 0]
		),
		(point
			:time		0.5
			:value		[0.5, 0.5]
		),
		(point
			:time		0.83;; 18/24
			:value		[1, 0]
		),
		(point
			:time		1
			:value		[0.5, -0.5]
		)
	]
)
